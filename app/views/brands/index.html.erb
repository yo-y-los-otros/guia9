<%- model_class = Brand -%>
<div class="page-header">
  <h1>Brands</h1>
</div>
<table border="1" class="table table-striped table-bordered table-condensed table-hover pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "name" %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
     <%= render @brands %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New brand', new_brand_path, :class => "btn btn-primary", :remote => true %></td>
    </tr>
  </tfoot>
</table>