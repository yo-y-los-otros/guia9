<%- model_class = Product -%>
<div class="page-header">
  <h1>Products</h1>
</div>
<table border="1" class="table table-striped table-bordered table-condensed table-hover pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "name" %></th>
      <th><%= sortable "brand" %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
     <%= render @products %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'New product', new_product_path, :class => "btn btn-primary", :remote => true %></td>
    </tr>
  </tfoot>
</table>
